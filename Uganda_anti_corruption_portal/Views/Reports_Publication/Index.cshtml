@model IEnumerable<Uganda_anti_corruption_portal.Models.Reports_Publication>

@{
    ViewBag.Title = "Index";
}

<h2 style="text-align:center;">List of all Reports, Publicatiions and Legislations</h2>


<p>
    <div class="row">
        <div class="col-md-2">
            <a href="@Url.Action("Administration","Home")" class="btn btn-primary">Back to Admin page</a>
        </div>
        <div class="col-md-2">
            <a href="@Url.Action("Create")" class="btn btn-primary">Create New</a>
        </div>
    </div>
</p>
<table class="table table-striped table-responsive-md table-dark">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PublicationDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Details)
            </th>
            <th>
                Report Publication
            </th>
            <th></th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tbody>
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PublicationDate)
                </td>
                <td class="ellipsis">
                    @Html.DisplayFor(modelItem => item.Details)
                </td>
                <td>
                    <a href="@Url.Action("GetFile","Reports_Publication",new {id=item .Reports_PublicationID})" target="_blank">View File</a>

                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Reports_PublicationID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Reports_PublicationID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Reports_PublicationID })
                </td>
            </tr>
        </tbody>
    }

</table>