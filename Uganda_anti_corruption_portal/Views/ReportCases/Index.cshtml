@model IEnumerable<Uganda_anti_corruption_portal.Models.ReportCase>

@{
    ViewBag.Title = "Index";
}

<h2 style="text-align:center;">List of All Complaints</h2>

<p>
    <a href="@Url.Action("Administration","Home")" class="btn btn-primary">Back to Admin page</a>
</p>
<table class="table table-striped table-responsive-md table-dark">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>

@foreach (var item in Model) {
    <tbody>
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td class="ellipsis">
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @*@Html.ActionLink("Edit", "Edit", new { id = item.ReportCaseID }) |*@
                @Html.ActionLink("Details", "Details", new { id = item.ReportCaseID }) 
                @*@Html.ActionLink("Delete", "Delete", new { id = item.ReportCaseID })*@
            </td>
        </tr>
    </tbody>
}

</table>
