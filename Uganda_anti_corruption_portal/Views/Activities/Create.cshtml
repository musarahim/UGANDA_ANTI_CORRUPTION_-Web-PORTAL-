@model Uganda_anti_corruption_portal.Models.Activity

@{
    ViewBag.Title = "Create";
}
<div class="adminback">
    <h2>Create</h2>
    @if (TempData["notice"] != null)
    {
        <p class="alert alert-success" id="successmessage">@TempData["notice"]</p>
    }


    @using (Html.BeginForm("Create", "Activities", FormMethod.Post, new { enctype = "multipart/form-data", ContributorID = ViewBag.ContributorID }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Step</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.ActivityCategoryID, "Service Name", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("ActivityCategoryID", null, htmlAttributes: new { @class = "form-control col-md-8" })
                    @Html.ValidationMessageFor(model => model.ActivityCategoryID, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.ActivityNo, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.ActivityNo, new { htmlAttributes = new { @class = "form-control col-md-8" } })
                    @Html.ValidationMessageFor(model => model.ActivityNo, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.NameOfActivity, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.NameOfActivity, new { htmlAttributes = new { @class = "form-control col-md-8" } })
                    @Html.ValidationMessageFor(model => model.NameOfActivity, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control col-md-8" } })
                    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.Label("Image", new { @class = "control-label col-md-2" })
                <div class="col-md-2">
                    <input type="file" name="Image" id="myimg" size="40" /> &nbsp;
                    <img id="activityimg" scr="#" alt="Your image" height="200" width="200" />

                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10 text-danger">
                    @ViewBag.FileStatus

                </div>

            </div>

            <div class="row">
                <div class="col-md-offset-2 col-md-2" style="margin-bottom:12px;">
                    <input type="submit" value="Add Step" class="btn btn-primary" />
                </div>
                <div class="col-md-offset-2">
                    <a href="@Url.Action("Index","Activities")" class="btn btn-success" style="width:100px;">Done </a>
                </div>

            </div>
        </div>
    }


    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<script src="~/Scripts/jquery-3.3.1.js"></script>
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script type="text/javascript">
    'use strict';
    function readURL(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();
            reader.onload = function (e) {
                $('#activityimg').attr('src', e.target.result);
            }
            reader.readAsDataURL(input.files[0]);
        }
    }
    $('#myimg').change(function () {
        readURL(this);
    });

  
   
</script>
