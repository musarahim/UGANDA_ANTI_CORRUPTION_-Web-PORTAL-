@model IEnumerable<Uganda_anti_corruption_portal.Models.Office>

@{
    ViewBag.Title = "Admin";
}
<div class="jumbotron backgroundcontent">

    <h2 style="text-align:center;">List of all offices</h2>

    <p>
        <div class="row">
            <div class="col-md-2">
                <a href="@Url.Action("Administration","Home")" class="btn btn-primary">Back to Admin page</a>
            </div>
            <div class="col-md-2">
                <a href="@Url.Action("Create")" class="btn btn-primary">Create New</a>
            </div>
        </div>
    </p>
    <table class="table table-striped table-responsive-md">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.OfficeName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PhysicalLocation)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BoxNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.District)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TelNo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Fax)
                </th>
                <th></th>
            </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tbody>
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.OfficeName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PhysicalLocation)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BoxNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.District)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TelNo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Fax)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.OfficeID })
                        @Html.ActionLink("Details", "Details", new { id = item.OfficeID })
                        @Html.ActionLink("Delete", "Delete", new { id = item.OfficeID })
                    </td>
                </tr>
            </tbody>
        }

    </table>
</div>