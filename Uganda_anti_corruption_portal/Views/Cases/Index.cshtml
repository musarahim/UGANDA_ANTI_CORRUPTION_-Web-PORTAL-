@model IEnumerable<Uganda_anti_corruption_portal.Models.Case>

@{
    ViewBag.Title = "Index";
}
<div class="jumbotron backgroundcontent">
    <h2 style="text-align:center;">IG List of All cases</h2>

    <p>
        @*@Html.ActionLink("Create New", "Create")*@
        <div class="row">
            <div class="col-md-2">
                <a href="@Url.Action("Administration","Home")" class="btn btn-primary">Back to Admin page</a>
            </div>
            <div class="col-md-2">
                <a href="@Url.Action("Create")" class="btn btn-primary">Add New</a>
            </div>
        </div>
    </p>
    <table class="table table-striped table-responsive-md">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CaseRef)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CaseStatus)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CaseCategory)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UpdatedDate)
                </th>
                <th></th>
            </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tbody>
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CaseRef)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CaseStatus)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CaseCategory)
                    </td>
                    <td class="ellipsis" iu>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UpdatedDate)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.CaseID },new {}) |
                        @Html.ActionLink("Details", "Details", new { id = item.CaseID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.CaseID })
                    </td>
                </tr>
            </tbody>
        }

    </table>
</div>
